<launch>
	<arg name="camera" default="camera" />
	<arg name="depth" default="depth" />
	<node pkg="mie443_contest1" type="depth_processor" name="depth_processing" />
	<node pkg="depthimage_to_laserscan" type="depthimage_to_laserscan" name="corr_scan">
      <!-- Pixel rows to use to generate the laserscan. For each column, the scan will
           return the minimum value for those pixels centered vertically in the image. -->
    <param name="scan_height" value="10"/>
    <param name="output_frame_id" value="/camera_depth_frame"/>
    <param name="range_min" value="0.45"/>
    <remap from="image" to="/corrected_depth"/>
    <remap from="scan" to="/corrected_scan"/>
		<remap from="camera_info" to="/camera/depth_registered/camera_info" />
    <remap from="$(arg camera)/image" to="/corrected_depth"/>
    <remap from="$(arg camera)/scan" to="/corrected_scan"/>
	</node>
</launch>
